<body>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="@Url.Action("Index","Home")" class="brand-wrap">
                            <img class="logo" src="~/Content/images/banners/logo1.jpg">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="@Url.Action("Search","Home")" class="search-header" name="timkiem">
                            <div class="input-group w-100">
                                <select class="custom-select border-right" name="tên danh mục">
                                    <option value="">Tất cả các loại</option>
                                    <option value="codex">Đặc biệt</option>
                                    <option value="comments"> Chỉ tốt nhất</option>
                                    <option value="content">Muộn nhất</option>
                                </select>
                                <input type="text" class="form-control" placeholder="Tìm kiếm">

                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="nộp">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-user"></i>
                                        <span class="notify">3</span>

                                    </div>
                                    @if (Session["idUser"] != null)
                                    {
                                        <a href="@Url.Action("Home","Admin/Product/Index")">Trang Admin</a>
                                        <a href="@Url.Action("Logout","Home")" class="fs-10">Đăng Xuất</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Login","Home")" class="fs-10">Đăng nhập</a>
                                    }
                                    @*<small class="text"> My profile </small>*@



                                </a>
                            </div>
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-comment-dots"></i>
                                        <span class="thông báo"></span>
                                    </div>
                                    <small class="text">@Html.ActionLink("Đăng ký", "Register", "", new { }, null)</small>

                                </a>
                            </div>
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-store"></i>
                                    </div>
                                    <small class="text" style="text-align:right">@Html.ActionLink("Đơn hàng", "Listing", "Gird", new { }, null) </small>

                                </a>
                            </div>
                            <div class="widget-header">

                                <div class="icon-area">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                                        <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                    </svg>
                                </div>
                                <span class="notify"id="CartCount">@Session["count"]</span>
                                <small class="text" style="text-align:right">   @Html.ActionLink("Giỏ hàng", "Index", "Card", new { }, null)</small>


                                </a>
                            </div>
                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->


